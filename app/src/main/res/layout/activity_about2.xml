<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AboutActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pdfview1"
                android:layout_width="match_parent"
                android:layout_height="593dp"
                android:src="@drawable/ipf_formula_2019_page_0001_cr" />

            <ImageView
                android:id="@+id/pdfview2"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:src="@drawable/ipf_formula_2019_page_0002_cr" />

            <ImageView
                android:id="@+id/pdfview3"
                android:layout_width="match_parent"
                android:layout_height="587dp"
                android:src="@drawable/ipf_formula_2019_page_0003_cr" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>